# Oppgave 1C! Tok sin tid så er stolt av denne :thumbs_up:

fun nok_to_valuta(nok_amount, hvilken_valuta): # Veksling * x kroner * valuta
  if hvilken_valuta == "Euro": # Hvis vi velger Euro så bruker koden denne
    nok_amount * 0.084 # Antatt Valutakurs for Euro
  else if hvilken_valuta == "USD": # Hvis det står ikke Euro så går koden til USD
    nok_amount * 0.093 # Antatt Valutakurs for USD
  else: # Hvis ikke så er det ingen gyldig valuta
    "Ingen gyldig Valuta" # Feilmelding for folk som prøver seg
  end
end

nok_to_valuta(1, "Euro") # Input og printer ut returverdi for Euro
nok_to_valuta(10, "USD") # Input og printer ut returverdi for USD


# Under dette er det test av Valuta

# Dollar Test
dollartest = nok_to_valuta(1, "USD") # valuta testen mellom 1 krone og usd

check "riktig valute endring for dollar": # Test av USD endring
  dollartest * (1) is 0.093
  dollartest * (2) is 0.186
  dollartest * (3) is 0.279
  dollartest * (4) is 0.372
end


# Euro Test
eurotest = nok_to_valuta(1, "Euro") # valuta testen mellom 1 krone og euro

check "riktig valute endring for euro": # Test av Euro endring
  eurotest * (1) is 0.084
  eurotest * (2) is 0.168
  eurotest * (3) is 0.252
  eurotest * (4) is 0.336
end